<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/iv"
    android:clickable="false"
    android:focusable="false"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgview"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="fitXY"
            android:src="@drawable/liveasy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgview"
            android:layout_centerHorizontal="true"
            android:text="@string/please_select_your_language"
            android:textSize="@dimen/textsize"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_alignLeft="@id/text1"
            android:layout_alignRight="@id/text1"
            android:maxLines="2"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="@string/language"
            android:textSize="12sp" />
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="215dp"
            android:layout_height="47dp"
            android:layout_below="@+id/text2"
            android:layout_marginTop="@dimen/spinnertop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/spinnerg">
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="215dp"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextbtn"
            android:layout_width="215dp"
            android:layout_height="48dp"
            android:layout_below="@+id/rl1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/next"
            android:backgroundTint="#2E3B62"
            android:textColor="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/me"
            android:scaleType="fitXY"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/re"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
</FrameLayout>